 <Window x:Class="Scheduler3._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler3._0"
        mc:Ignorable="d"
        Title="Scheduler" Height="660" Width="525" Closing="Window_Closing">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="MenuItem_Click"/>
                    <MenuItem Header="_Save" Click="MenuItem_Click_1"/>
                    <MenuItem Header="_Help" Click="MenuItem_Click_3"/>
                    <MenuItem Header="_Clear" Click="MenuItem_Click_2"/>
                </MenuItem>
            </Menu>
            <ScrollViewer>
                    <Grid Name="timeGrid" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="83*"/>
                            <ColumnDefinition Width="434*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
            </ScrollViewer>
        </DockPanel>
</Window>
